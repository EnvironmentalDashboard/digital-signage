<div class="modal-body">
  <div class="form-group">
    <label for="controller_template_for_{{controller.id}}">Select template</label>
    <select class="form-control controller-select-dropdown" id="controller_template_for_{{controller.id}}" name="controller_template[]" data-controls="#controller-drop-zone-{{controller.id}}">
        {% if controller.template.id > 3 %} {# todo: hardcoded maximium parent template id #}
        <option value="-1" selected>Custom</option>
        {% endif %}
        <option value="1">2 Buttons</option>
    </select>
  </div>
  <input type="hidden" name="id[]" value="{{controller.id}}">
  <div class="form-group">
    <p>Drag buttons onto controller:</p>
    <input type="hidden" name="button-arrangement[]" value='' id="button-arrangement-{{controller.id}}" class="hidden-button-arrangement">
    <div class="row">
      <div class="col-sm-6">
        <div style="height: 300px;width: 100%;" class="drop-zone" ondrop="controller_drop_handler(event);" ondragover="dragover_handler(event);" id="controller-drop-zone-{{controller.id}}" data-controller="{{controller.id}}">
          {{ markup[loop.index-1]|raw }}
        </div>
      </div>
      <div class="col-sm-6">
      {{ render(controller('App\\Controller\\Button::listAll')) }}
      </div>
    </div>
  </div>

</div>