{% if controllers is empty %}
<p class="text-muted text-center">You have no configured remote controllers.</p>
{% else %}

<table class="table-responsive-sm table">
    <thead class="thead-dark">
        <tr>
            <th scope="col" style="border-top:none">#</th>
            <th scope="col" style="border-top:none">Label</th>
            <th scope="col" style="border-top:none">Buttons</th>
            <th scope="col" style="border-top:none">URL</th>
            <th scope="col" style="border-top:none">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for controller in controllers %}
        <tr>
            <th scope="row">{{loop.index}}</th>
            <td>{{ controller.label }}</td>
            <td>{{ controller.buttons|length }}</td>
            <td>
                {% if controller.buttons|length > 0 %}
                <a href="{{ path('controller-url', {'id': controller.id}) }}"
                    target="_blank">{{ path('controller-url', {'id': controller.id}) }}</a>
                {% endif %}
            </td>
            <td class="form-inline" style="min-width: 160px">
                <button type="button" class="btn btn-primary shadow mr-2" data-toggle="modal"
                    data-target="#controller-{{controller.id}}-editControllerModal">Edit</button>
                <form action="{{ path('controller-delete', {'id': controller.id}) }}" method="POST">
                    <input type="submit" class="btn btn-danger shadow" value="Delete">
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% for controller in controllers %}
<div class="modal fade" id="controller-{{controller.id}}-editControllerModal" tabindex="-1" role="dialog"
    aria-labelledby="editControllerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <form action="{{ path('controller-save-buttons', {'id': controller.id}) }}" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="editControllerModalLabel">Edit remote controller</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {% include 'button-edit.html.twig' %}
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary shadow">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endfor %}
{% endif %}