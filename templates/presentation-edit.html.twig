{% if presentation.id == '' %}
{% set presentation_id = "newpres" ~ display.id %}
{% set is_new = true %}
{% else %}
{% set presentation_id = presentation.id %}
{% set is_new = false %}
{% endif %}
<div class="modal-body" {% if loop.index == 1 %}id="new-pres{{display.id}}" {% endif %}>
  <h5>Presentation #{{loop.index}}</h5>
  <div class="form-group">
    <label for="pres_template_for_{{presentation_id}}">Select template</label>
    <select class="form-control template-select-dropdown" id="pres_template_for_{{presentation_id}}"
      name="pres_template[]" data-arrangement="#frame-arrangement-{{presentation_id}}" data-controls="#drop-zone-{{presentation_id}}">
      {% for template in templates %}
      <option value="{{template.id}}" data-markup="{{template.twig}}">{{template.label}}</option>
      {% endfor %}
      {% if is_new == false %}
      <option selected data-markup="{{presentation.template.twig}}" value="0">Custom</option>
      {% endif %}
    </select>
  </div>
  <input type="hidden" name="id[]" value="{{presentation_id}}" class="hidden-id">
  <div class="form-group">
    <p>Drag carousels onto template:</p>
    <input type="hidden" name="frame-arrangement[]"
      value='{% if is_new %}{}{% else %}{{ frame_arrangements[presentation_id]|json_encode|raw }}{% endif %}'
      id="frame-arrangement-{{presentation_id}}" class="hidden-frame-arrangement">
    <div class="row">
      <div class="col-sm-6">
        <div style="height: 300px;width: 100%;" class="drop-zone" ondrop="drop_handler(event);"
          ondragover="dragover_handler(event);" id="drop-zone-{{presentation_id}}" data-pres="{{presentation_id}}">
          {% if is_new %}
          {{ carousels['tmp']|raw }}
          {% else %}
          {% for carousel in carousels[presentation_id] %}
          {{ carousel|raw }}
          {% endfor %}
          {% endif %}
        </div>
      </div>
      <div class="col-sm-6">
        {{ render(controller('App\\Controller\\Carousel::list')) }}
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="pres_duration_for_{{presentation_id}}">Duration</label>
    <input type="number" class="form-control" id="pres_duration_for_{{presentation_id}}"
      aria-describedby="pres_duration_help" name="pres_duration[]" value="{{presentation.duration/1000}}">
    <small id="pres_duration_help" class="form-text text-muted">In seconds</small>
  </div>
  <div class="form-group form-check">
		{# https://stackoverflow.com/a/25764926 -- THERE MUST BE NO WHITESPACE BTWN INPUTS #}
		<input type="hidden" name="skip[]" {% if presentation.skip %}value="1"{% else %}value="0"{% endif %}><input type="checkbox" class="form-check-input" id="skip_{{presentation_id}}" {% if presentation.skip %}checked{% endif %} onclick="this.previousSibling.value=1-this.previousSibling.value">
    <label class="form-check-label" for="skip_{{presentation_id}}">Skip in main loop</label>
  </div>
  <input type="hidden" name="position[]" value="{{loop.index}}">
  <div class="form-group">
    <div class="btn-group" role="group" aria-label="Move presentation position">
      <button type="button" class="btn btn-outline-secondary" onclick="movePosition(-1, this.parentNode.parentNode.parentNode, this)" {% if loop.index == 1 %}disabled{% endif %}>Move earlier</button>
      <button type="button" class="btn btn-outline-secondary" onclick="movePosition(1, this.parentNode.parentNode.parentNode, this)" {% if loop.last %}disabled{% endif %}>Move later</button>
    </div>
    <button type="button" class="btn btn-outline-danger" onclick="alert('Not yet implemented')">Delete presentation</button>
  </div>
</div>