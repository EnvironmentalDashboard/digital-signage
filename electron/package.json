{
  "name": "media-player",
  "productName": "Community Hub Digital Display",
  "version": "0.0.1",
  "description": "Digital signage desktop media player",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "APP_ENV=prod electron .",
    "start-dev": "APP_ENV=dev electron .",
    "dist": "electron-builder -mwl"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://releases.communityhub.cloud/"
      }
    ],
    "appId": "cloud.communityhub.digital-signage",
    "mac": {
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "protocols": {
      "name": "communityhub-protocol",
      "schemes": [
        "communityhub"
      ]
    },
    "dmg": {
      "backgroundColor": "#333333",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 648,
        "height": 648
      }
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}"
    },
    "linux": {
      "target": "deb"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Terf/digital-signage.git"
  },
  "author": "Tim Robert-Fitzgerald <tim@communityhub.cloud>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Terf/digital-signage/issues"
  },
  "homepage": "https://github.com/Terf/digital-signage#readme",
  "devDependencies": {
    "electron": "^5.0.9",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "electron-updater": "^4.1.2",
    "node-fetch": "^2.6.0",
    "ws": "^7.1.1"
  }
}